{
  "manifest_version": 2,
  "name": "MailMess",
  "version": "1.0",
  "description": "MailMess - A Firefox extension for generating masked emails",
  "icons": {
     "192": "logo192.png",
     "512": "logo512.png"
  },
  "browser_action": {
     "default_popup": "./public/index.html",
     "default_title": "MailMess"
  },
  "permissions": [
     "activeTab",
     "<all_urls>"
  ],
  "content_scripts": [
     {
       "matches": ["<all_urls>"],
       "tsx": ["content-script.tsx"]
     }
  ]
 }
 